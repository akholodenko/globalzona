<?xml version="1.0" encoding="UTF-8" ?>
<layout>
	<layoutType>boxLayout</layoutType>
	<url>defaultAssets.swf</url>
	<data> 
	
<vbox style="width: 100%; height: 100%;">
	<box style="width: 100%; height: 100%">
		<media style="width: 100%; height: 100%; background-color: black" />
	</box>
	<box style="width: 100%">
		<img src="background" style="width: 100%; color: primary-color"/>
		<hbox style="width: 100%; height: 100%">

<hbox style="width: 100%; padding-right: 10px">		
	<play style="margin-top: 8px; margin-left: 8px; width: 100%; max-width: 34px; min-width: 24px; color: secondary-color">
		<on style="width: 100%">
			<mouseup style="width: 100%"><img src="pauseUp" style="width: 100%" /></mouseup>
			<mousedown style="width: 100%"><img src="pauseOver" style="width: 100%" /></mousedown>
			<mouseover style="width: 100%"><img src="pauseOver" style="width: 100%" /></mouseover>
		</on>
		<off style="width: 100%">
			<mouseup style="width: 100%"><img src="playUp" style="width: 100%" /></mouseup>
			<mousedown style="width: 100%"><img src="playOver" style="width: 100%" /></mousedown>
			<mouseover style="width: 100%"><img src="playOver" style="width: 100%" /></mouseover>
		</off>
	</play>

	<mediascrubber direction="horizontal" style="margin-top: 12px; margin-left: 15px; margin-right: 5px; width: 100%; min-width: 36px">
		<handle style="vertical-align: center; margin-top: 1px" fade=".2">
			<img src="hSlider" />
		</handle>
		<hbox style="padding-top: 3px; width: 100%">
			<img src="backBarLeft" />
			<img src="backBarCenter" style="width: 100%" />
			<img src="backBarRight" />
		</hbox>
		<maximum orientation="horizontal" style="padding-top: 3px; width: 100%">
			<img src="loadBarLeft" />
			<img src="loadBarCenter" style="width: 100%" />
			<img src="loadBarRight" />
		</maximum>
		<current orientation="horizontal" style="padding-top: 3px; width:100%; color: secondary-color">
			<img src="progressBarLeft" />
			<img src="progressBarCenter" style="width: 100%" />
			<img src="progressBarRight" />
		</current>
	</mediascrubber>
	
	<html style="margin-top: 10px; margin-left: 5px; color: #666666; font-family: sans-serif; font-size: 11px">
		#{TIME}
	</html>
</hbox>

<box>
	<hbox style="margin-top: 8px; margin-right: 8px; horizontal-align: right">
		<volume duration=".2">
			<box style="margin-left: 4px; overflow-y: hidden; height: 110px;">
				<img src="volumeBack" style="color: primary-color" />
				<volumescrubber direction="vertical" style="width: 100%; padding-bottom: 6px">
					<img src="volumeBar" style="horizontal-align: center; margin-top: 10px" />
					<handle fade=".2" style="horizontal-align: center; margin-top: 10px"><img src="vSlider" /></handle>
					<current style="horizontal-align: center; vertical-align: bottom; color: secondary-color"><img src="volumeLevel" /></current>
				</volumescrubber>
			</box>
		
			<mute style="color: secondary-color">
				<on>
					<mouseup><img src="muteUp" /></mouseup>
					<mousedown><img src="muteOver" /></mousedown>
					<mouseover><img src="muteOver" /></mouseover>
				</on>
				<off>
					<mouseup><img src="vol3Up" /></mouseup>
					<mousedown><img src="vol3Over" /></mousedown>
					<mouseover><img src="vol3Over" /></mouseover>
				</off>
			</mute>
		</volume>
		<fullscreen style="color: secondary-color">
			<mouseup><img src="fullscreenUp" /></mouseup>
			<mousedown><img src="fullscreenOver" /></mousedown>
			<mouseover><img src="fullscreenOver" /></mouseover>
		</fullscreen>
		<menu style="color: secondary-color">
			<hbox style="width: 100%">
				<img src="menuBack" style="width: 100%;" />
				<img src="menuBackEnd" />
			</hbox>
			<mouseup style="vertical-align: middle; padding: 0px 4px"><localized string="menu" style="color: #666666; font-family: sans-serif; font-size: 11px; font-weight: bold" /></mouseup>
			<mousedown style="vertical-align: middle; padding: 0px 4px"><localized string="menu" style="color: #2f83d9; font-family: sans-serif; font-size: 11px; font-weight: bold" /></mousedown>
			<mouseover style="vertical-align: middle; padding: 0px 4px"><localized string="menu" style="color: #2f83d9; font-family: sans-serif; font-size: 11px; font-weight: bold" /></mouseover>
		</menu>
	</hbox>
</box>
			
		</hbox>
	</box>
</vbox>
	
	</data>
</layout> 